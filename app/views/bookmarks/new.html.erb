<div class="container">
  <div class="heading">
    <h1>Add a bookmark</h1>
  </div>
  <div class="content">
    <form action="<%= bookmarks_path %>" method="POST">
      <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />
      <table>
        <tr>
          <td>
            <label for="title">Bookmark Title</label>
          </td>
          <td>
            <input type="text" name="bookmark[title]" id="title">
          </td>
        </tr>
        <tr>
          <td>
            <label for="url">URL</label>
          </td>
          <td>
            <input type="url" name="bookmark[url]" id="url">
          </td>
        </tr>
      </table>
      <div>
        <input type="submit" value="Create A Bookmark">
      </div>
    </form>
  </div>
  <div class="links">
    <%= link_to("View Bookmarks", bookmarks_path) %>
  </div>
</div>